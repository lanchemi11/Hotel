@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="display-4">Homepage</h1>
        <a style="width: 15%" href="/Home/Insert">
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Broj sobe</th>
                <th scope="col">Rezervisano</th>
                <th scope="col">Cena</th>
                <th scope="col">Slika</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var apartman in Model)
            {
                <tr>
                    <td>@apartman.Id</td>
                    <td>@apartman.BrojSobe</td>
                    <td>@apartman.Rezervisano</td>
                    <td>@apartman.Cena</td>
                    <td>
                            <img src="@apartman.Slika" />
                    </td>
                     <td>
                         <button class="btn btn-success">Update</button>
                     </td>
                     <td>
                          <button class="btn btn-danger">Delete</button>
                     </td>

                </tr>
            }
        </tbody>
    </table>
</div>
