@{
    ViewData["Title"] = "Insert Page";
}

<div class="text-center">
    <div class="d-flex justify-content-center">
        <h1 class="display-4">Dodaj apartman</h1>
    </div>

    <div class="d-flex justify-content-center">
        <form>

            <div class="form-group col-12">
                <label for="broj_sobe">Broj sobe</label>
                <input type="text" class="form-control" id="broj_sobe" placeholder="Broj sobe">
            </div>


            <div class="form-group col-12">
                <label for="cena">Cena</label>
                <input type="number" class="form-control" id="cena" placeholder="Cena">
            </div>

            <div class="form-group col-12">
                <label for="formFile" class="form-label">Izaberi sliku</label>
                <input class="form-control" type="file" id="formFile">
            </div>

            <div class="form-group col-12">
                <label class="form-check-label" for="defaultCheck2">Rezervisi</label>
                <input class="form-check-input" type="checkbox" id="defaultCheck2">
            </div>

            <button type="submit" class="btn btn-primary">Insert</button>
        </form>
    </div>
</div>
